{
  "name": "tsx-create-element",
  "version": "2.0.0",
  "description": "Use TypeScript TSX without React",
  "main": "dist/es6/index.js",
  "types": "dist/es6/index.d.ts",
  "files": [
    "dist/es6/*"
  ],
  "scripts": {
    "bundle": "npm run test && parcel build ./tmp/index.js --no-minify --no-source-maps --out-dir ./docs",
    "build": "tsc -p .",
    "watch": "tsc -p . -w",
    "build-test": "tsc -p test",
    "build-all": "npm run build && npm run build-test",
    "test": "npm run build && npm run build-test",
    "test-watch": "tsc -p test -w",
    "uitest": "parcel serve ./test/index.html --open",
    "start": "npm-run-all --parallel watch test-watch uitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danmarshall/tsx-create-element.git"
  },
  "keywords": [
    "tsx"
  ],
  "author": "Dan Marshall",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danmarshall/tsx-create-element/issues"
  },
  "homepage": "https://github.com/danmarshall/tsx-create-element#readme",
  "peerDependencies": {
    "@types/react": "*"
  },
  "dependencies": {
    "html-tags": "^2.0.0",
    "svg-tags": "^1.0.0"
  },
  "devDependencies": {
    "@types/react": "^16.4.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "typescript": "^2.7.2"
  }
}
